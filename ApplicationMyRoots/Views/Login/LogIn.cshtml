@model ApplicationMyRoots.Models.LogInUser

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#divmenu').attr('hidden', 'hidden');
            $('li[class="active"]').removeClass();
            $('#menutree').attr('class', 'active');
        });
    </script>
}
<div class="container" style="min-width:80%;height:400px;background-image: url('../../images/tree.jpg');background-repeat:no-repeat;background-size:cover;border:1px solid green;">
    <br/><br/>
    <h1 data-tag="8" style="text-align:center;color:white;"><strong>@ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(8, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID)</strong></h1>
    <div class="row" style="margin-left:29%;margin-top:5%;">
        @using (Html.BeginForm()) 
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <div class="form-group">
                    @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2", data_tag = "9", style = "color:white;" }, labelText: @ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(9, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID))
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", data_tag = "10", style = "color:white;" }, labelText: @ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(10, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID))
                    <div class="col-md-10">
                        <input class="form-control" type="password" id="Password" name="Password" />
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" data-tag="12" value="@ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(12, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID)" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
    <h4 style="text-align:center;"><strong style="color:red;">@ViewBag.Error</strong></h4>
</div>

