@model ApplicationMyRoots.Models.LogInUser

@{
    ViewBag.Title = "LogIn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4 data-tag="8">@ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(8, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID)</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2", data_tag="9" }, labelText: @ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(9, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID))
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2", data_tag = "10" }, labelText: @ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(10, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID))
            <div class="col-md-10">
                <input class="form-control" type="password" id="Password" name="Password"/>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Remember, htmlAttributes: new { @class = "control-label col-md-2", data_tag = "11" }, labelText: @ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(11, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID))
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Remember)
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" data-tag="12" value="@ApplicationMyRoots.Common.ResourceManager.getElementTextInLanguage(12, ApplicationMyRoots.Common.ResourceManager.LoggedUserLanguageID)" class="btn btn-default" />
            </div>
        </div>
        <strong style="color:red;">@ViewBag.Error</strong>
    </div>
}

